<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="x_ware.com.edl.modules.auth.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/frBackgroundColor"
    android:padding="10sp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbEndTime"
                    android:padding="2sp"
                    android:src="@drawable/logo"
                    android:background="@null"
                    android:scaleType="centerCrop"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtUserName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@color/txtBackgroundColor"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="User Name"
                    android:padding="10dp"
                    android:password="false"
                    android:singleLine="true"
                    android:imeOptions="flagNoFullscreen"
                    android:textSize="@dimen/text_size_medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPassword"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:layout_marginBottom="10dp"
                    android:background="@color/txtBackgroundColor"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:password="true"
                    android:imeOptions="flagNoFullscreen"
                    android:textSize="@dimen/text_size_medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/btnLogin"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_weight="1"
                    android:padding="@dimen/button_padding" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <Button
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:id="@+id/btnClear"
                    android:theme="@style/btnPrimary"
                    android:textColor="@color/btnTextColor"
                    android:layout_weight="1"
                    android:padding="@dimen/button_padding" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
