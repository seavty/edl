<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="x_ware.com.edl.modules.appointment.AppointmentNewActivity"
    tools:showIn="@layout/activity_appointment_new"
    android:padding="@dimen/row_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <ImageButton
            android:layout_width="@dimen/drawable_width_48dp"
            android:layout_height="@dimen/drawable_height_48dp"
            android:id="@+id/imbSave"
            android:padding="2sp"
            android:src="@drawable/save"
            android:background="@null"
            android:scaleType="centerCrop"/>
    </LinearLayout>


    <!-- Action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action:"
                android:layout_weight="1"/>

            <!-- here user spinner -->
            <Spinner
                android:id="@+id/spnAction"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <!-- End Action -->

    <!-- <LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/txtSubject"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Subject"/>

    </LinearLayout>
    <!-- <LinearLayout -->

    <!-- Comm Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="@dimen/row_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comm Details:"/>

        <EditText
            android:id="@+id/txtCommunicationDetails"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Communication Details"/>

    </LinearLayout>
    <!-- End Comm Details -->

    <!-- Start Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="@dimen/row_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Time:"/>

        <EditText
            android:id="@+id/txtStartTime"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:hint="Start Time"/>

        <ImageButton
            android:id="@+id/imbStartTime"
            android:layout_width="@dimen/drawable_width_48dp"
            android:layout_height="@dimen/drawable_height_48dp"
            android:background="@null"
            android:padding="2sp"
            android:scaleType="centerCrop"
            android:src="@drawable/calendar" />
    </LinearLayout>
    <!-- Start Time -->

    <!-- End Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="@dimen/row_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Time:"/>

        <EditText
            android:id="@+id/txtEndTime"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="End Time"/>

        <ImageButton
            android:layout_width="@dimen/drawable_width_48dp"
            android:layout_height="@dimen/drawable_height_48dp"
            android:id="@+id/imbEndTime"
            android:padding="2sp"
            android:src="@drawable/calendar"
            android:background="@null"
            android:scaleType="centerCrop"/>

    </LinearLayout>
    <!-- Start Time -->


</LinearLayout>
