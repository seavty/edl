<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/row_margin_top"
    android:layout_marginBottom="@dimen/row_margin_bottom">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LinearLayout wrap  -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/row_padding">

            <!-- LinearLayout for stage  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblAffiliate"
                    android:text="Affiliate Dummy "
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>
            <!-- end LinearLayout for stage  -->

            <!-- LinearLayout for Relationship  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblRelationship"
                    android:text="Relationship Dummy"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>
            <!-- end LinearLayout for Relationship  -->


        </LinearLayout>
        <!-- LinearLayout wrap  -->

    </android.support.v7.widget.CardView>

</LinearLayout>